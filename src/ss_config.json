{
  "name": "Architecture_test",
  "n_gpu": 1,
  "preprocessing": {
      "sr": 16000,
      "spectrogram": {
          "type": "MelSpectrogram",
          "args": {}
      },
      "log_spec": true
  },
  "augmentations": {
      "wave": [],
      "spectrogram": []
  },
  "arch": {
      "type": "SpExPlus",
      "args": {}
  },
  "data": {
      "train": {
          "batch_size": 1,
          "num_workers": 0,
          "datasets": [
              {
                  "type": "LibrispeechDataset",
                  "args": {
                      "part": "train-clean-100",
                      "max_audio_length": 20.0
                  }
              }
          ]
      },
      "val": {
          "batch_size": 4,
          "num_workers": 0,
          "datasets": [
              {
                  "type": "LibrispeechDataset",
                  "args": {
                      "part": "dev-clean"
                  }
              }
          ]
      },
      "test-other": {
          "batch_size": 4,
          "num_workers": 0,
          "datasets": [
              {
                  "type": "LibrispeechDataset",
                  "args": {
                      "part": "test-other"
                  }
              }
          ]
      },
      "test-clean": {
          "batch_size": 4,
          "num_workers": 0,
          "datasets": [
              {
                  "type": "LibrispeechDataset",
                  "args": {
                      "part": "test-clean"
                  }
              }
          ]
      }
  },
  "optimizer": {
      "type": "Adam",
      "args": {
          "lr": 0.0003
      }
  },
  "loss": {
      "type": "SpExLoss",
      "args": {
        "alpha": 0.5,
        "beta": 0.1,
        "gamma": 0.1
      }
  },
  "metrics": [
      {
          "type": "SiSDRMetric",
          "args": {
              "name": "SiSDR"
          }
      }
  ],
  "lr_scheduler": {
      "type": "OneCycleLR",
      "args": {
          "steps_per_epoch": 100,
          "epochs": 200,
          "anneal_strategy": "cos",
          "max_lr": 0.0003,
          "pct_start": 0.2
      }
  },
  "trainer": {
      "epochs": 10,
      "save_dir": "saved/",
      "save_period": 5,
      "verbosity": 2,
      "monitor": "min val_loss",
      "early_stop": 10,
      "visualize": "wandb",
      "wandb_project": "ss_project",
      "len_epoch": 100,
      "grad_norm_clip": 10
  }
}