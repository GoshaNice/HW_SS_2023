{
    "name": "Spex+Hope",
    "n_gpu": 1,
    "preprocessing": {
        "sr": 16000
    },
    "augmentations": {
        "wave": [],
        "spectrogram": []
    },
    "arch": {
        "type": "SpExPlus",
        "args": {
            "L1": 40,
            "L2": 160,
            "L3": 320,
            "N": 256,
            "proj_dim": 256,
            "tcn_extractor_hidden": 256,
            "num_speakers": 251
        }
    },
    "data": {
        "test": {
            "batch_size": 2,
            "num_workers": 5,
            "datasets": [
                {
                    "type": "LibrispeechDataset",
                    "args": {
                        "part": "dev-clean",
                        "test": true
                    }
                }
            ]
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001
        }
    },
    "loss": {
        "type": "SpExLoss",
        "args": {
            "alpha": 0.1,
            "beta": 0.1,
            "gamma": 0.5
        }
    },
    "metrics": [
        {
            "type": "SiSDRMetric",
            "args": {
                "name": "SiSDR"
            }
        },
        {
            "type": "PESQMetric",
            "args": {
                "name": "PESQ"
            }
        }
    ],
    "lr_scheduler": {
        "type": "OneCycleLR",
        "args": {
            "steps_per_epoch": 400,
            "epochs": 100,
            "anneal_strategy": "cos",
            "max_lr": 0.001,
            "pct_start": 0.2
        }
    },
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 5,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10,
        "visualize": "wandb",
        "wandb_project": "ss_project",
        "len_epoch": 400,
        "grad_norm_clip": 10
    }
}